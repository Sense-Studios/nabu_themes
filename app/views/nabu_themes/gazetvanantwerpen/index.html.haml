-### Video Player ###

.video_background
  -#.moar_button.over_glow
  -#  Meer videos
  .video_background_hider#video_container
  = render :partial => "shared/player/video", locals: {height:''}
  
  #controls.control_holder.hidden
    = render partial: 'nabu_themes/destandaard/controls'
    

-### TOP: Nav and Menu ###

.top
  .custom_navbar
    .custom_navbar_menu.custom_navbar_left
      %span.glyphicon.glyphicon-menu-hamburger
    .custom_navbar_home.custom_navbar_left
      %span.glyphicon.glyphicon-home
    .custom_navbar_brand
      = link_to "javascript:", :target=>"_top" , :class => 'navbar-brand primary-color ' do
        = image_tag @theme.logo, :class => 'pull-left'                
        %h1

      
  
  .side_menu
    .side_menu_header
      %i.fa.fa-close
    %div.tabpanel{:role=>"tabpanel"}
      %ul#tabs.nav.nav-tabs.nav_tabs_custom.primary-bottom-border-color-active{:role=>"tablist"}
        %li.tabtitlewrapper.active{:role=>"presentation"}
          %a.primary-border-color-active{:href=>"#info", :aria=>{:controls=>"info"}, :role=>"tab" , :data=>{:toggle=>"tab"}} 
            %i.fa.fa-info-circle
        %li.tabtitlewrapper{:role=>"presentation"}
          %a.primary-border-color-active{:href=>"#share", :aria=>{:controls=>"share"}, :role=>"tab" , :data=>{:toggle=>"tab"}} 
            %i.fa.fa-share-alt
        /%li.tabtitlewrapper{:role=>"presentation"}
        /%a.primary-border-color-active{:href=>"#comments", :aria=>{:controls=>"comments"}, :role=>"tab" , :data=>{:toggle=>"tab"}} 
        /%i.fa.fa-comments
        %li.tabtitlewrapper{:role=>"presentation"}
          %a.primary-border-color-active{:href=>"#related", :aria=>{:controls=>"related"}, :role=>"tab" , :data=>{:toggle=>"tab"}} 
            %i.fa.fa-lightbulb-o        

      
      .tab-content
        #info.tab-pane.fade.in.active{:role=>"tabpanel",}
          -# Js Set info #
        #share.tab-pane.fade{:role=>"tabpanel",}
          = render partial: 'nabu_themes/gazetvanantwerpen/share'
        /#comments.tab-pane.fade{:role=>"tabpanel",}
          
        #related.tab-pane.fade{:role=>"tabpanel",}
          = render partial: 'nabu_themes/gazetvanantwerpen/latestvideos'

-### MIDDLE: brandbox ###

.middle
  .brandbox
    .nav_buttons.left_button
      %span
        %span.glyphicon.glyphicon-chevron-left.custom_navigation_video.glyph.primary-color-hover

    .header{:style=>"margin-left: 100px; display: none;"}
      %ul.cat_group

    .content

    .nav_buttons.right_button
      %span
        %span.glyphicon.glyphicon-chevron-right.custom_navigation_video.glyph.primary-color-hover

